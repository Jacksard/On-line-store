<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../../css/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="../../css/style.css">
    <title><%= title %></title>
</head>
<body>

<div class="container">
<h2>Edit Product:</h2>

<% if (errors !== 'null' &&  errors !== undefined ) { %>
    <h4><Strong>Fill the product details</Strong></h4>
    <% for (const error of errors){ %>
    
    <div class="alert alert-danger"><%= error.msg %></div>
    
    <% } %>
    <% }  %>

<form method="POST" action="/admin/edit/<%= edit._id %>" enctype="multipart/form-data">

    <label>Product Name:</label><br>
        <input type="text" name="product_name" placeholder="<%= edit.product_name %>"><br>
    <label>Price:</label><br>
        <input type="text" name="price" placeholder="<%= edit.price %>">
<br><br>

<label>Category</label>
<select name="category">
    <% categories.forEach(function(name){ %>
     <option value="<%= name.name %>"><%= name.name %></option>
    <% }); %>
</select>
<br><br>

<label>In stock</label>
<select name="in_stock">
<option value="true">Yes</option>
<option value="false">No</option>
</select><br><br>
<div class="desc">
<label>Description:</label><br>
<input type="text" name="desc" size="20">
</div>
<br>
<h4>Product image:</h4>
<input type="file" name="image">
<br>
<input type="submit" value="Submit" class="editbutton">
</form>
</div>
<!---
<input type="button" name="backButton" value="Close" 
style="background-color:#245f91; color:#fff;font-weight:bold;" 
onclick="window.close();">

-->


</body>
</html>

